<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="200dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="198dp">

            <TextView
                android:id="@+id/descriptionClinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="112dp"
                android:text="Clinic address"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptionService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="64dp"
                android:text="Subject of the appointment"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textService" />

            <TextView
                android:id="@+id/textService"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:textColor="#212121"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toBottomOf="@+id/descriptionDentist" />

            <TextView
                android:id="@+id/TextYear"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:textColor="#212121"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDay" />

            <TextView
                android:id="@+id/textDay"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="40dp"
                android:autofillHints=""
                android:ems="10"
                android:text="12"
                android:textAlignment="center"
                android:textColor="#d50000"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.681" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="75dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="100dp"
                android:autofillHints=""
                android:ems="10"
                android:text="3:30 pm"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#212121"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.686" />

            <TextView
                android:id="@+id/textService"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:textColor="#212121"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.939"
                app:layout_constraintStart_toEndOf="@+id/textService"
                app:layout_constraintTop_toBottomOf="@+id/descriptionService"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textService"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:textColor="#212121"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionClinic" />

            <TextView
                android:id="@+id/descriptionDentist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Dentist"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toBottomOf="@+id/textTime"
                app:layout_constraintVertical_bias="0.118" />

            <TextView
                android:id="@+id/textMonth"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:textAlignment="center"
                android:textColor="#212121"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toEndOf="@+id/edit_button"
                app:layout_constraintTop_toBottomOf="@+id/textService"
                app:layout_constraintVertical_bias="1.0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="12dp"
                android:text="@string/edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/dividerVertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="65dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/dividerHorizontal"
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginBottom="60dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>