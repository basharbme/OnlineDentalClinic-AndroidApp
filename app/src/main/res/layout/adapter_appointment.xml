<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_appointments"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:minHeight="200dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="198dp">

            <TextView
                android:id="@+id/nClinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="140dp"
                android:text="Clinic"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Hour"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtClinic"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:textColor="#212121"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nClinic" />

            <TextView
                android:id="@+id/nDentist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Dentist"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toBottomOf="@+id/textTime"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/txtDentist"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:textColor="#212121"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toBottomOf="@+id/nDentist" />

            <TextView
                android:id="@+id/nService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="134dp"
                android:text="Service"
                android:textColor="#424242"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/nDentist"
                app:layout_constraintTop_toBottomOf="@+id/txtClinic"
                app:layout_constraintVertical_bias="0.101" />

            <TextView
                android:id="@+id/txtService"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:textColor="#212121"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txtDentist"
                app:layout_constraintTop_toBottomOf="@+id/nService" />

            <TextView
                android:id="@+id/TextYear"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="44dp"
                android:textAlignment="center"
                android:textColor="#212121"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textDay" />

            <TextView
                android:id="@+id/textDay"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:autofillHints=""
                android:ems="10"
                android:text="12"
                android:textAlignment="center"
                android:textColor="#d50000"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:ems="10"
                android:text="3:30"
                android:textAllCaps="false"
                android:textColor="#212121"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textDay"
                app:layout_constraintTop_toBottomOf="@+id/nHour" />

            <TextView
                android:id="@+id/textMonth"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="8dp"
                android:textAlignment="center"
                android:textColor="#212121"
                app:layout_constraintBottom_toTopOf="@+id/textDay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="80dp"
                android:layout_height="41dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.059"
                app:layout_constraintStart_toEndOf="@+id/edit_button"
                app:layout_constraintTop_toBottomOf="@+id/txtDentist"
                app:layout_constraintVertical_bias="1.0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="12dp"
                android:text="@string/edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/dividerVertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="65dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/dividerHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="135dp"
                android:layout_marginBottom="60dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/dividerHorizontal2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="75dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>